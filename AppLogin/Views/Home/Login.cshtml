@model AppLogin.Models.Cliente
@{
    ViewData["Title"] = "Login";
}
´<main role="main">
    <br />
    <br />
    <section class="container">
          <aside class="col-sm-4">
             <h3 class="h1">Login</h3>
             <div id="code-login-1">
                <div class="card">
                    <article class="card-body">
                            @if (ViewData["MSG-E"] != null)
                            {
                              <p class="alert alert-danger">@Html.Raw(ViewData["MSG-E"])</p>
                            }
                        <h4 class="card-title mb-4 mt-1">Entrar</h4>
                        <form method="post">
                            <div class="form-group">
                                 <label>E-mail</label>
                                 <input asp-for="Email" class="form-control" placeholder="Email" type="email" />
                            </div>
                            <div class="form-group">
                                <label>Senha</label>
                                <input asp-for="Senha" class="form-control" placeholder="******" type="password" />
                                <a class="float-right" href="#">Esqueceu a senha</a>
                            </div>
                            <div class="form-group">
                               <button type="submit" class="btn btn-primary btn-block"> Acessar </button>
                                <a asp-action="Cadastrar" asp-controller="Cliente" class="float-right btn btn-outline-primary">Cadastre-se</a>
                            </div>
                        </form>
                     </article>
                </div>
             </div>
        </aside>
    </section>
</main>


